<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;800&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        /* background-color: #13d0dc; */
      }
      h1 {
        font-size: 2.5rem;
        font-weight: 700;
      }

      h2 {
        font-size: 1.8rem;
        font-weight: 600;
      }

      h3 {
        font-size: 1.4rem;
        font-weight: 800;
      }

      h4 {
        font-size: 1.1rem;
        font-weight: 400;
      }
      /* Responsive */
      @media (max-width: 767px) {
        /* custom css */
        h1 {
          font-size: 30px;
        }
        h3 {
          font-size: 22px;
        }
        p {
          font-size: 13px;
        }
        a {
          font-size: 13px;
        }
        button {
          font-size: 13px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('navbar.ejs') %> </br></br>
    <div class="container-fluid" style="background-color: #6a6d70">
      <div class="row justify-content-center py-5">
        <div class="col-6">
          <div class="container">
            <div class="container-fluid">
              <p class="text-white" style="font-size: 50px">
                Shopping is Never Ending Love
              </p>
              <br />
              <img
                src="assets/Logo4.png"
                alt=""
                class="img-fluid"
              />
            </div>
          </div>
        </div>
        <div class="col-4" style="background-color: white">
          <div class="container">
            <div class="container-fluid">
              <br /><br />
              <% if (error) {%>
              <p style="color: red"><%= error %></p>
              <% } %>
              <h2>Log in</h2></br>
              <!-- Form -->
              <form action="/login" method="post">
                <!-- input 1 -->
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="username"
                  />
                </div>
                <!-- input 2 -->
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                  />
                </div>
                <input
                  class="btn btn-info px-3 py-2"
                  type="submit"
                  value="LOG IN"
                  style="background-color: #08d1f9"
                />
              </form>

              <!-- End Form -->
              <br /><br />
              <div class="col-5">
                <img src="./assets/Logo1.png" alt="" class="img-fluid" />
              </div>
              <a
                href="/register"
                class="mb-4 text-decoration-none text-center"
                style="color: #1ac0e4"
                >Create Account</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
